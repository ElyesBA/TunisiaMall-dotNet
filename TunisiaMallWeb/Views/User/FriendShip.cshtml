@using TunisiaMall.Domain.Entities

@model IEnumerable<TunisiaMall.Domain.Entities.user>

@{
    ViewBag.Title = "FriendShip";
    
}

<h2>FriendShip</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
       
        
        <td>
            @foreach (var item1 in (List<friendship>)ViewBag.lfriends)
            {
                if (item1.idUser1.Equals(1) && item1.Equals(item.idUser))
                {
                    @Html.DisplayName("Already A Friend")
                }
                else
                {
                    <button type="button" value="AddFriend" onclick="addFriend()">AddFriend</button>
                    
                }
            }

           

            
        </td>
    </tr>
}

</table>
